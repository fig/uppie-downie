<%= turbo_stream_from @post %>
<%= turbo_frame_tag(post) do %>

  <%= button_to "UpVote", upvote_post_path(post.to_global_id) %>

  <p>
    <strong>Score:</strong>
    <%= post.weighted_score %>
  </p>

  <%= button_to "DownVote", downvote_post_path(post.to_global_id) %>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
<% end %>
